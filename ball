plr = game.Players.LocalPlayer
local c = game.Players.LocalPlayer.Character
c.HumanoidRootPart.Shape = Enum.PartType.Ball
c.HumanoidRootPart.Size = Vector3.new(3.5,3.5,3.5)
workspace.Camera.CameraSubject = c.HumanoidRootPart
local root = c.HumanoidRootPart
local bf = Instance.new("BodyForce",root)
c.Humanoid.PlatformStand = true
root.Color = c.Head.Color
c.Head.face.Parent = root
root.Transparency = 0
root.Material = 1568
local Sphere = root:Clone()
Sphere.Parent = c
Sphere.Name = "SpherePart"
local a = Instance.new("Weld",Sphere)
a.Part0 = Sphere
a.Part1 = root
root.Material = 256
root.face:Destroy()
root.Transparency = 1
Sphere.Massless = true

game.Players:Chat(".sphereo")

for i,v in pairs(game.Players:GetChildren()) do
v.Chatted:Connect(function(msg)
if msg == ".sphereo" then
local ca = v.Character
local roota = ca.HumanoidRootPart
roota.Color = ca.Head.Color
ca.Head.face.Parent = roota
roota.Transparency = 0
roota.Material = 1568
local Sphereo = roota:Clone()
Sphereo.Parent = ca
Sphereo.Name = "SpherePart"
local a = Instance.new("Weld",Sphere)
a.Part0 = Sphere
a.Part1 = roota
roota.Material = 256
roota.face:Destroy()
roota.Transparency = 1
Sphereo.Massless = true
 pcall(function()
 for i,v in pairs(ca:GetDescendants()) do
if v:IsA("BasePart") and v.Name ~= "HumanoidRootPart" and v.Name ~= "SpherePart" then
v.Massless = true
v.CanCollide = false
v.Transparency = 1
end
end
end)
end)

 local connect = game:GetService("RunService").Heartbeat:Connect(function(set)
 c.Humanoid.PlatformStand = true
 pcall(function()
 for i,v in pairs(c:GetDescendants()) do
if v:IsA("BasePart") and v.Name ~= "HumanoidRootPart" and v.Name ~= "SpherePart" then
v.Massless = true
v.CanCollide = false
v.Transparency = 1
end
end
end)
root.CanCollide = true
if c.Humanoid.Jump == false then
 bf.Force =  Vector3.new(c.Humanoid.MoveDirection.X * 100 , 0 ,c.Humanoid.MoveDirection.Z * 100)
else
 bf.Force =  Vector3.new(c.Humanoid.MoveDirection.X * 100 , 3500 ,c.Humanoid.MoveDirection.Z * 100)
end
end)
